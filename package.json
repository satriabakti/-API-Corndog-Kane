{
	"name": "hexagonal-typescript",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"test": "jest ./tests/**/*.test.ts --coverage",
		"build": "tsc -p tsconfig.json",
		"start": "node dist/index.js",
		"start:prod": "node dist/index.js",
		"start:dev": "nodemon --exec ts-node src/index.ts",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"generate:resource": "node scripts/create-resource.js",
		"remove:resource": "node scripts/remove-resource.js",
		"prisma:generate": "dotenv -e .env -- prisma generate",
		"prisma:migrate": "dotenv -e .env -- prisma migrate dev",
		"prisma:studio": "dotenv -e .env -- prisma studio",
		"prisma:push": "dotenv -e .env -- prisma db push",
		"prisma:seed": "dotenv -e .env -- prisma db seed"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	},
	"author": "lutfian.rhdn",
	"license": "ISC",
	"description": "",
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/helmet": "^0.0.48",
		"@types/jest": "^29.5.14",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.10.5",
		"@types/redis": "^4.0.10",
		"@typescript-eslint/eslint-plugin": "^8.19.0",
		"@typescript-eslint/parser": "^8.19.0",
		"dotenv-cli": "^10.0.0",
		"eslint": "^9.17.0",
		"globals": "^15.14.0",
		"jest": "^29.7.0",
		"nodemon": "^3.1.9",
		"prisma": "^6.17.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.19.0",
		"vite": "^6.0.7"
	},
	"dependencies": {
		"@prisma/client": "^6.17.1",
		"@prisma/extension-optimize": "^2.0.0",
		"@prisma/instrumentation": "^6.17.1",
		"@types/bcrypt": "^6.0.0",
		"@types/body-parser": "^1.19.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/multer": "^2.0.0",
		"@types/socket.io": "^3.0.1",
		"bcrypt": "^6.0.0",
		"bcrypt-ts": "^7.1.0",
		"body-parser": "^2.2.0",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"helmet": "^8.0.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"multer": "^2.0.2",
		"redis": "^4.7.0",
		"sharp": "^0.34.4",
		"socket.io": "^4.8.1",
		"winston": "^3.18.3",
		"zod": "^4.1.12"
	}
}
